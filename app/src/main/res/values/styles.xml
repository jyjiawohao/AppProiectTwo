<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green01</item>
        <item name="colorPrimaryDark">@color/green01</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--设置toolbar 返回键颜色 溢出菜单图标颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    <!--启动白屏原因-->
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/zhizu_home_bg</item>
    </style>

    <item name="is_scale_tag" type="id"></item>
    <item name="is_scale_fontsize_tag" type="id"></item>

    <!-- 溢出菜单图标颜色-->


    <style name="login_et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/etbg_shape</item>
        <item name="android:drawablePadding">@dimen/dp5</item>
        <item name="android:textColorHint">#ECECEC</item>
        <item name="android:maxLength">20</item>
    </style>

    <style name="tv_red14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_red</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_black14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tv_black12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#404040</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tv_gray10">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#b3b3b3</item>
        <item name="android:textSize">10sp</item>
    </style>
</resources>
